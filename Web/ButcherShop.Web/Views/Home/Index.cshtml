@using ButcherShop.Common
@model ButcherShop.Web.ViewModels.Home.IndexViewModel
@{
    this.ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to @GlobalConstants.SystemName!</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <div class="col-md-4 offset-4">
        <p>We have:</p>
        <ul class="list-group">
            <li class="list-group-item">@Model.ProductsCount Products</li>
            <li class="list-group-item">@Model.CategoriesCount Categories of Products</li>
            <li class="list-group-item">@Model.RecipesCount Recipes using our Products</li>
        </ul>
    </div>
    
</div>
